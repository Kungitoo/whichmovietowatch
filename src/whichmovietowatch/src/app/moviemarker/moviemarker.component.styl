.navbar
  display: flex
  flex-wrap: wrap
  justify-content: space-between
  background-color: #673ab7
  padding: 5px
  *
    font-weight: 500

#navbar-title
  color: white;
  font-size: 20px
  margin: auto
  margin-right: 8px

.navbar-left
  display: flex
  flex-wrap: wrap
  flex-direction: row
  margin: 5px

.navbar-centre-left
  display: flex
  align-items: center

.navbar-centre-right
  display: flex
  align-items: center
  margin: 5px
  *
    margin-right: 10px
    margin-left: 10px

.navbar-right
  display: flex
  flex-direction: row
  align-items: center
  margin: 5px

.nav-button-container
  padding: 10px
  display: flex
  flex-direction: column

.nav-button-container-left
  align-items: end

.profile-container *
  padding: 1px
  margin: 0 !important

.movie-iframe
  width: 100%
  height: 400px

.movie-reel-container
  margin-top: 50px
  width: 70%
  max-width: 1350px
  display: flex
  justify-content: center
  align-items: center
  margin-bottom: auto

.movie-reel-header
  height: 70px

.movie-reel-content
  height: 150px
  overflow: auto

.history-container
  margin-top: 50px
  width: 25%
  min-width: 280px

.main-cards
  display: flex
  flex-direction: row
  flex-wrap: wrap
  justify-content: space-around

.red
  background-color: #f38181

.green
  background-color: #95e1d3

.history-list-item
  display:flex
  justify-content: space-between
  width: 100%
  border-radius: 5px
  padding: 4px !important
  height : 90%

.history-list-item-container
  padding: 3%
  margin: 2%

.negative-action:first-letter
  text-transform: uppercase

.positive-action:first-letter
  text-transform: uppercase
